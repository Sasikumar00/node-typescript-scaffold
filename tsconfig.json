{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*"]
}
